---
const { title, tagline, slug, created, author } = Astro.props;
---

<div class="p-4 md:w-1/3">
  <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
    <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="/images/default.jpg" alt="blog"
    />
    <div class="p-6">
      <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">
        {author} &bull; {created}
      </h2>
      <h1 class="title-font text-lg font-medium text-gray-900 mb-3">
        {title}
      </h1>
      <p class="leading-relaxed mb-6">
        {tagline}
      </p>
      <div class="flex items-center flex-wrap">
        <a href={`/blog/${slug}`} class="bg-blue-500 text-white w-full py-2 rounded inline-flex items-center justify-center md:mb-2 lg:mb-0">
          Read More
        </a>
      </div>
    </div>
  </div>
</div>
